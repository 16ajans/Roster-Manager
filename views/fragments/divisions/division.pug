include ../mixins/division-card
+division-card(division)
    button(hx-get="/divisions/" + division.id + "/edit" hx-target="closest .division-card" hx-swap="outerHTML") Update
    button(hx-delete="/divisions/" + division.id hx-target="closest .division-card" hx-swap="outerHTML" hx-confirm="Are you SURE you want to delete this division?") Delete