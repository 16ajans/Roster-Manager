- authed = typeof user !== 'undefined'
- avatar = authed ? `https://cdn.discordapp.com/avatars/${user.discord}/${user.avatar}.png` : '/images/avatar.png'
header
    a.flexH(href='/')
        img#logo(src='/images/CVRE.png' alt='CVRE Logo')
        if (production)
            h1 Roster Manager
        else
            h1(style="text-align: center;color: red;font-weight: bold;") DEVELOPMENT
    .space
    if authed && user.admin
        a.flexV(href='/admin')
            p Admin Portal
            i.gg-link
    a(href='/account')
        img#avatar(src=avatar alt='Discord Avatar' onerror="this.src='/images/discordavatar.png';")