include ../mixins/verify-card
each player in players
    +verify-card(player)
script.
    document.body.addEventListener('htmx:confirm', function(evt) {
        if (evt.detail.verb === "delete") {
            evt.preventDefault();
            evt.stopPropagation();
            if (confirm("Are you sure you want to delete this player's registration?"))
                evt.detail.issueRequest()
            }
        }
    );