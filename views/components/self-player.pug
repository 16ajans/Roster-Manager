include ../mixins/player-card
+player-card(player)
button(hx-get="/api/self/register" hx-target="#self") Update
button(hx-delete="/api/self" hx-target="#self") Delete
script.
    document.body.addEventListener('htmx:confirm', function(evt) {
        if (evt.detail.verb === "delete") {
            evt.preventDefault();
            if (confirm("Are you sure you want to delete your registration?"))
                evt.detail.issueRequest()
            }
        }
    );